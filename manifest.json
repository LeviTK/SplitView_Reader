{
  "manifest_version": 3,
  "name": "SplitView Reader",
  "version": "1.2.2",
  "description": "Arc-style split panel for extracting and reading web content",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Open SplitView"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "site_rules/*.json"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
